<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.altran.optimind.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.altran.optimind.application.Perspective"
            icon="icon/icon_optimind_32.png"
            id="com.altran.optimind.Application.perspective"
            name="Optimind">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="com.altran.optimind.Application.category1"
            class="com.altran.optimind.application.View"
            id="com.altran.optimind.Application.view"
            inject="true"
            name="Workflow Graphical View"
            restorable="true">
      </view>
      <category
            id="com.altran.optimind.Application.category1"
            name="Optimind">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.altran.optimind.Application.perspective">
         <view
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               ratio="0.2"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="org.eclipse.ui.views.ContentOutline"
               minimized="false"
               ratio="0.2"
               relationship="bottom"
               relative="org.eclipse.ui.navigator.ProjectExplorer">
         </view>
         <view
               closeable="true"
               id="com.altran.optimind.Application.view"
               minimized="false"
               moveable="true"
               ratio="0.8"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="false"
               visible="false">
         </view>
         <view
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="Optimind"
            application="org.eclipse.ui.ide.workbench">
         <property
               name="windowImages"
               value="icon/icon_optimind_16.png,icon/icon_optimind_32.png,icon/icon_optimind_48.png,icon/icon_optimind_64.png,icon/icon_optimind_128.png,icon/icon_optimind_256.png">
         </property>
         <property
               name="appName"
               value="Optimind">
         </property>
         <property
               name="aboutImage"
               value="icon/icon_optimind.png">
         </property>
         <property
               name="aboutText"
               value="Optimind is a Workflow Management System">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <actionProvider
            class="com.altran.optimind.ui.action.TransformXmi2XmlActionProvider"
            id="com.altran.optimind.ui.action.transform">
         <enablement>
            <adapt
                  type="org.eclipse.core.resources.IResource">
               <test
                     property="org.eclipse.core.resources.name"
                     value="*.optimind">
               </test>
            </adapt>
         </enablement>
      </actionProvider>
      <actionProvider
            class="com.altran.optimind.ui.action.ShowGraphActionProvider"
            id="com.altran.optimind.ui.action.showGraph">
         <enablement>
            <adapt
                  type="org.eclipse.core.resources.IResource">
               <test
                     property="org.eclipse.core.resources.name"
                     value="*.optimind">
               </test>
            </adapt>
         </enablement>
      </actionProvider>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension
                  pattern="com.altran.optimind.ui.action.transform">
            </actionExtension>
            <actionExtension
                  pattern="com.altran.optimind.ui.action.showGraph">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>

</plugin>
